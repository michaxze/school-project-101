@charset "utf-8";
@import url("css/reset-min.css");
@import url("css/default.css");
/* CSS Document */

* { margin:0; padding:0; }

html, body {
	font-family: "Lucida Sans", "Lucida Grande", "sans-serif";
	background: #CCCCCC url(images/bckgrnd.gif) repeat-x top;
}

#wrap {
	margin: 0 auto;
	width: 900px;
}
#banner {
	background: url(images/bg-banner.png) center top no-repeat;
	width: 900px; height: 139px;
	margin-top: 10px;
}
#banner h1 { text-indent: -99999px; }
#menus { margin-left: 90px; }
#menus li {
	float: left;
	padding: 5px 25px;
	display: block;
}
#menus li a { 
	color: #ba0303;
	font-size: 13px;
	font-weight: bold;
}
#menus li a:hover { color: #FFFFFF; }
#content {
	background: #FFFFFF;
}
#sidebar {
	width: 25%;
	float: right;
	background: #333333;
	margin-top: 10px;
	margin-right: 10px;
	padding-bottom: 10px;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
}
#footer {
	background: #333333;
	text-align:center;
	padding: 10px 20px;
	font-size: 14px;
	margin-bottom: 20px;
	clear: both;
}
#copyright { float: left; }
#createdby { float: right; }
#copyright, #createdby, #createdby a {
	font-size: 10px;
	color: #FFFFFF;
}
#createdby a { color: #5accfc; }
/* ----------- Posts --------------- */
.posts {
	font-family: "Lucida Sans", "Lucida Grande", "sans-serif";
	text-align: left;
	padding: 10px 10px;
	margin-top: 15px;
	float: left;
	width: 71%;
}

.posts p { margin-bottom: 10px; }
.posts p.meta { font-size: 13px; color: #666;}
.posts p.meta a {
	font-weight: bold;
	border-bottom: 1px dotted #000;
}

.posts-content {
	margin-top: 15px;
	padding: 10px 15px;
	line-height:20px;
	font-size: 12px;
}
.posts-content img {
	margin: 5px;
	padding: 5px;
	background: #FFF;
}

.posts-content ul, .posts-content ol { 	
	margin: 10px 0px 10px 10px; 
	padding: 0;
}
.posts-content ul li, .posts-content ol li {
	margin-left: 35px; }

.posts-content h2 {
        margin: 20px 0px;
        color: #666;
}

.posts-content h3 { margin: 15px 0px; }
.title {
	border-bottom: 1px dotted #F2F2F2;
	padding-left: 10px;
	color: #FFFFFF;
	font-weight: lighter;
	font-size: 14px;
}
.date { 
	font-size: 9px; 
	color: #999;
	text-transform: uppercase;
	padding-left: 10px;
}
.titleholder {
	margin-left: -40px;
	background: url(images/bg-title.png) repeat-x top;
	padding: 3px 5px 1px 5px;
	-moz-border-radius: 10px;
	-webkit-border-radius: 10px;
	-moz-border-radius-topright: 0px;
	-webkit-border-top-right-radius: 0px;
}
.titleholder a, .more { color: #FFF; }
.more { 
	background: #ba0303; 
	font-size: 11px;
	color: #FFF;
	padding: 1px 5px;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
}

#footer ul {
	list-style-type: none;
}
#footer ul li{
	float: left;
	padding: 2px 10px;
	text-align: center;
}

.cont {
	font-size: 12px;
	line-height: 18px;
	letter-spacing: 1px;
}
.tag-line {
	color: #999999;
}
.clear {
	clear: both;
}

/*** WordPress Classes ****/
.current_page_item {
	background: #333333;
	-moz-border-radius-topleft: 8px;
	-webkit-border-top-left-radius: 8px;
	-moz-border-radius-topright: 8px;
	-webkit-border-top-right-radius: 8px;
}
.current_page_item a { color: #FFFFFF; }
.widget { padding: 5px 10px; }
.widget ul li { border-bottom: 1px dotted #999; }
.widget ul li a { color: #CCC; font-size: 10px; }
.widget ul li a:hover { color: #FFF; }
.sidebartitle, .widgettitle { 
	padding: 5px 0px;
	background: #09F;
	font-size: 11px;
	text-align: center;
	text-transform: uppercase;
	color: #FFF;
	letter-spacing: 1px;
	margin-top: 10px;
}